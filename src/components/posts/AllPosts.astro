---
import type { Post } from "@lib/types";
import CardPost from "@components/posts/CardPost.astro";

const { posts } = Astro.props;
---

<section class="max-w-7xl mx-auto text-left md:text-center px-4 py-4 sm:px-6">
  <h2
    id="posts"
    class="text-primary-text text-3xl font-bold tracking-wider pt-3 pb-5 md:py-3 font-plusjakarta scroll-mt-20"
  >
    All my adventures
  </h2>
  <div class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-6">
    {
      posts.length > 0 &&
        posts.map((post: Post) => {
          const { title, excerpt, featuredImage, date, slug } = post;

          return (
            <CardPost
              title={title}
              excerpt={excerpt}
              featuredImage={featuredImage}
              date={date}
              slug={slug}
            />
          );
        })
    }
  </div>
</section>
