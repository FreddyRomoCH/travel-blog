---
import type { Post, Categories } from "@lib/types";
import CardPost from "@components/posts/CardPost.astro";
const { posts, currentSlug } = Astro.props;

const filteresPosts = posts.filter(
  (post: Categories) => post.slug !== currentSlug
);
---

<section class="max-w-7xl mx-auto text-left md:text-center px-4 py-4 sm:px-6">
  <h2
    class="text-primary-text text-3xl font-bold tracking-wider pt-3 pb-5 md:py-3 font-plusjakarta"
  >
    Related posts
  </h2>
  <div class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-6">
    {
      filteresPosts.map((post: Post) => {
        const { title, excerpt, featuredImage, date, slug } = post;

        return (
          <CardPost
            title={title}
            excerpt={excerpt}
            featuredImage={featuredImage}
            date={date}
            slug={slug}
          />
        );
      })
    }
  </div>
</section>
